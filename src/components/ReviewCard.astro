---
interface Props {
  title: string;
  description: string;
  slug: string;
  category: string;
  rating?: number;
  image?: string;
  featured?: boolean;
}

const { title, description, slug, category, rating, image, featured = false } = Astro.props;

const ratingStars = rating ? Math.round(rating) : 0;
---

<a href={`/reviews/${slug}`} class:list={[
  "group block bg-bg-card border border-border rounded-xl overflow-hidden hover:border-border-hover transition-all duration-200 hover:shadow-lg hover:shadow-accent/5",
  featured && "ring-1 ring-accent/20"
]}>
  {image && (
    <div class="aspect-video bg-bg-secondary overflow-hidden">
      <img src={image} alt={title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
    </div>
  )}
  <div class="p-5">
    <div class="flex items-center gap-2 mb-3">
      <span class="text-xs font-semibold uppercase tracking-wider text-accent bg-accent/10 px-2 py-0.5 rounded-full">
        {category.replace('-', ' ')}
      </span>
      {featured && (
        <span class="text-xs font-semibold uppercase tracking-wider text-yellow bg-yellow/10 px-2 py-0.5 rounded-full">
          Featured
        </span>
      )}
    </div>
    <h3 class="text-lg font-bold text-text-primary group-hover:text-accent transition-colors mb-2 line-clamp-2">
      {title}
    </h3>
    <p class="text-sm text-text-secondary line-clamp-2 mb-3">{description}</p>
    {rating && (
      <div class="flex items-center gap-1">
        {Array.from({ length: 5 }).map((_, i) => (
          <svg class:list={["w-4 h-4", i < ratingStars ? "text-yellow" : "text-border"]} fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
        <span class="text-sm text-text-muted ml-1">{rating.toFixed(1)}</span>
      </div>
    )}
  </div>
</a>
