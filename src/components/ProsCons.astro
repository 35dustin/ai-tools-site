---
interface Props {
  pros: string[];
  cons: string[];
}

const { pros, cons } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 my-8">
  <div class="bg-green/5 border border-green/20 rounded-xl p-5">
    <h4 class="flex items-center gap-2 text-green font-bold mb-3">
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
      </svg>
      Pros
    </h4>
    <ul class="space-y-2">
      {pros.map(pro => (
        <li class="flex items-start gap-2 text-sm text-text-secondary">
          <span class="text-green mt-0.5">+</span>
          {pro}
        </li>
      ))}
    </ul>
  </div>

  <div class="bg-red/5 border border-red/20 rounded-xl p-5">
    <h4 class="flex items-center gap-2 text-red font-bold mb-3">
      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
      Cons
    </h4>
    <ul class="space-y-2">
      {cons.map(con => (
        <li class="flex items-start gap-2 text-sm text-text-secondary">
          <span class="text-red mt-0.5">-</span>
          {con}
        </li>
      ))}
    </ul>
  </div>
</div>
