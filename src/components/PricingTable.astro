---
interface PricingTier {
  name: string;
  price: string;
  features: string[];
  recommended?: boolean;
}

interface Props {
  tiers: PricingTier[];
}

const { tiers } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 my-8">
  {tiers.map(tier => (
    <div class:list={[
      "bg-bg-card border rounded-xl p-6",
      tier.recommended ? "border-accent ring-1 ring-accent/30" : "border-border"
    ]}>
      {tier.recommended && (
        <span class="text-xs font-bold uppercase tracking-wider text-accent mb-2 block">Recommended</span>
      )}
      <h4 class="text-lg font-bold text-text-primary">{tier.name}</h4>
      <p class="text-2xl font-extrabold text-text-primary mt-2 mb-4">{tier.price}</p>
      <ul class="space-y-2">
        {tier.features.map(feature => (
          <li class="flex items-start gap-2 text-sm text-text-secondary">
            <svg class="w-4 h-4 text-green mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
            {feature}
          </li>
        ))}
      </ul>
    </div>
  ))}
</div>
