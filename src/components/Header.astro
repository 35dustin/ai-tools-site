---
const navItems = [
  { label: 'Reviews', href: '/reviews' },
  { label: 'Chatbots', href: '/chatbots' },
  { label: 'Image Gen', href: '/image-gen' },
  { label: 'Code', href: '/code-assistants' },
  { label: 'Writing', href: '/writing' },
  { label: 'Automation', href: '/automation' },
  { label: 'About', href: '/about' },
];
---

<header class="border-b border-border bg-bg-primary/80 backdrop-blur-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 text-text-primary hover:text-accent transition-colors">
        <svg class="w-8 h-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714a2.25 2.25 0 00.659 1.591L19 14.5M14.25 3.104c.251.023.501.05.75.082M19 14.5l-1.217-1.217a2.25 2.25 0 00-1.591-.659H7.808a2.25 2.25 0 00-1.591.659L5 14.5m14 0v4.25a2.25 2.25 0 01-2.25 2.25H7.25A2.25 2.25 0 015 18.75V14.5" />
        </svg>
        <span class="font-bold text-lg">AI Tools Review</span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-6">
        {navItems.map(item => (
          <a href={item.href} class="text-sm text-text-secondary hover:text-text-primary transition-colors font-medium">
            {item.label}
          </a>
        ))}
      </nav>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 text-text-secondary hover:text-text-primary" aria-label="Menu">
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>

    <!-- Mobile Nav -->
    <nav id="mobile-menu" class="hidden md:hidden pb-4 border-t border-border pt-4">
      <div class="flex flex-col gap-3">
        {navItems.map(item => (
          <a href={item.href} class="text-sm text-text-secondary hover:text-text-primary transition-colors font-medium px-2 py-1">
            {item.label}
          </a>
        ))}
      </div>
    </nav>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => menu?.classList.toggle('hidden'));
</script>
